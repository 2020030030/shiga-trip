
<div class='container'>
   <div align="center">
    <div class='col-md-3'>
      <div style="padding: 30px"></div>
       <table class="table">
         <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></tr>
          <tr>
           <th><%= user.name %></th>
          </tr>
          <tr>
           <th>follows</th>
           <th><%= link_to user.followings.count, user_followings_path(user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to user.followers.count, user_followers_path(user) %></th>
          </tr>
       </table>
       <div class='row'>
        <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-dark" %>
          <% end %>
          <% else %>
          <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
        <% end %>
       </div>
    </div>
  </div>
</div>