<div class="container">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
   <%= attachment_image_tag @post_image, :image,class:"card-img-top";%>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>
        <div class="col-10">
          <p class="card-text"><%= @post_image.caption %></p>
          <span><i class="fas fa-user"></i><%= @post_image.user.name %> | </span>
          <span><%= @post_image.created_at.strftime('%Y/%m/%d') %> | </span>
           <% if @post_image.favorited_by?(current_user) %>
              <span>
              <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
                ♥<%= @post_image.favorites.count %> いいね
              <% end %>
              </span>
           <% else %>
              <span>
              <%= link_to post_image_favorites_path(@post_image), method: :post do %>
                ♡<%= @post_image.favorites.count %> いいね
              <% end %>
           <% end %>
              </span>
          <div>
            <% if @post_image.user == current_user %>
              <%= link_to "投稿削除", post_image_path(@post_image), method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="comments card-text">
      <p>コメント件数：<%= @post_image.post_comments.count %></p>
        <% @post_image.post_comments.each do |post_comment| %>
      <hr>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <p><%= attachment_image_tag @post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %></p>
          </div>
          <div class="col-10">
            <div class="media-body ml-4 p-3">
              <%= post_comment.user.name %> |
              <%= post_comment.created_at.strftime('%Y/%m/%d') %></br>
              <%= post_comment.comment %>
              <div>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </div>
    <hr>
    <div style = "text-align:center">
    <div class="new-comment card-text ">
     <%= form_with(model:[@post_image, @post_comment], local: true) do |f| %>
     <div class="form-group">
     <%= f.text_area :comment, size:"50x5",placeholder: "コメントをここに" %>
     </div>
     <%= f.submit "送信する" %>
     <% end %>
    </div>
    </div>
  </div>
</div>
