
<% if @target == 'user' %>
	<h3>Users search for "<%= @content %>"</h3>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% elsif @target == 'prefecture' %>
	<h3>Post image search for "<%= @content %>"</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |post_image| %>
      <tr>
        <td>
          <%= attachment_image_tag(post_image.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
        </td>
        <td><%= post_image.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>